<div class="quiz-maker-results">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Quiz ID</th>
          <th scope="col">Title</th>
          <th scope="col">Total Responses</th>
          <th scope="col">Responses</th>
        </tr>
      </thead>
      <tbody>
        {% for summary in quiz_summary %}
          <tr>
            <td>{{ summary.quiz_id }}</td>
            <td>{{ summary.label }}</td>
            <td>{{ summary.total_responses }}</td>
            <td>
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#responseDetailsModal{{ summary.quiz_id }}">
                +
              </button>

              <!-- Modal -->
              <div class="modal fade" id="responseDetailsModal{{ summary.quiz_id }}" tabindex="-1" aria-labelledby="responseDetailsModalLabel{{ summary.quiz_id }}" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="responseDetailsModalLabel{{ summary.quiz_id }}">Respostas</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      {% for response in summary.responses %}
                        <div class="row d-flex align-items-center">
                          <div class="col">
                            <p><strong>Pergunta Título: {{ response.label | raw }}:</strong></p>
                            <p>Pergunta Descrição: {{ response.content | raw }} </p>
                            <table>
                              <thead>
                                <tr>
                                  <th>
                                    Resposta
                                  </th>
                                  <th>
                                    Votos
                                  </th>
                                </tr>
                              </thead>
                              <tbody class="table-results">
                                {% for key, item in response.value %}
                                  <tr data-label="{{ key }}" data-value="{{ item }}">
                                    <td>
                                      {{ key }}
                                    </td>
                                    <td>
                                      {{ item }}
                                    </td>
                                  </tr>
                                {% endfor %}
                              </tbody>
                            </table>
                          </div>
                        </div>
                        <hr>
                      {% endfor %}
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
</div>
